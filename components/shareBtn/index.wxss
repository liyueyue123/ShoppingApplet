/* components/shareBtn/index.wxss */
.shade {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 11000;
  width: 100%;
  height: 100%;
	background:rgba(0,0,0,0.45);
}
.shade .bottom_box {
  background: #eeeeee;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 306rpx;
}
button {
  height: 100rpx;
  border: 1rpx solid #eeeeee;
  border-radius: 0;
}
button::after{
    border: 0;
}
.shade .bottom_box .cancel {
  margin-top: 8rpx;
}