/* pages/user/user.wxss */
.me{
  height: 100%;
}
.userinfo{
  position: relative;
  width: 750rpx;
  height: 320rpx;
  background: #fafafa;
  color: #000;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  margin-top: 50rpx;
  border-radius: 50%;
  border:2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0,0,0,0.2);
}

.userinfo-nickname {
  color: #fff;
  font-size: 14px;
}

.powerBtn {
  position: absolute;
  bottom: 10rpx;
  left: 250rpx;
  z-index: 9999;
  font-size: 32rpx;
  background-color:#fafafa; 
  border-radius: 50%;
  border: 1px solid rgba(0,0,0,0.1);
}

button::after {
  border: none;
}

.sc{
  background: #fff;
  width: 100%;
  font-size: 12px;
  line-height: 16px;
  color: #666;
  padding: 4% 0;
}
.sc image{
  width: 24px;
  height: 24px;
  display: inline-block;
}
.bte{
  border-top: 1px solid #eee;
}
.qbdd{
  background: #fff;
  width: 92%;
  font-size: 12px;
  color: #666;
  padding: 4%;
  border-bottom: 1px solid #eee
}

.c33{
  float: left;
  color: #000
}

contact-button{
  position: relative;
  left:-50px;
  opacity: 0;
}

.btnfont{
  font-size: 16px;
}

.c333{
  float: left;
  color: #333;
}

.nonebackgroud{
   -webkit-tap-highlight-color: transparent;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    user-select:none;
}

/* 箭头 */
.arrow{
    display: inline-block;  
    margin: 12rpx 5rpx 0 0; 
    border-top: 1rpx solid;
    border-right: 1rpx solid;  
    width: 15rpx;
    height: 15rpx;  
    transform: rotate(45deg); 
}
.arrow_samll{
    display: inline-block;  
    margin: -3rpx 5rpx 0 0; 
    border-top: 1rpx solid;
    border-right: 1rpx solid;  
    width: 10rpx;
    height: 10rpx;  
    transform: rotate(45deg); 
}
/* 客服按钮 */
.contact-btn{
    width: 100%;
    padding: 0;
    line-height: 100%;
}
/* 商品推荐 */
.home_product_box {
width: 100%;
height: auto;
background:rgba(255,255,255,1);
}
.may_like{
width: 100%;
height: 48rpx;
}
.product_content_list {
width: 100%;
height: auto;
padding: 0 30rpx;
box-sizing: border-box;
display: flex;
justify-content: space-between;
flex-wrap: wrap;
}
.product_content_list .product_list_box{
position: relative;
width: 330rpx;
height: 505rpx;
border:1px solid rgba(214, 215, 220, 1);
border-radius:8rpx;
box-sizing: border-box;
margin-bottom:30rpx;
}
.product_content_list .product_list_box .product_item_img{
width: 100%;
height: 329rpx;
background-color: #FFF7CF;
}
.product_content_list .product_list_box .product_item_name{
margin: 10rpx 0 0 10rpx;
width: 98%;
overflow: hidden;
text-overflow: ellipsis;
white-space: nowrap;
font-size:27rpx;
font-weight:400;
color:rgba(63,63,63,1);
}
.product_content_list .product_list_box .product_item_type {
margin: 10rpx 0 0 10rpx;
font-size:23rpx;
font-weight:400;
color:rgba(127,134,153,1);
overflow: hidden;
text-overflow: ellipsis;
white-space: nowrap;
}
.product_content_list .product_list_box .product_item_price{
display: inline-block;
margin: 15rpx 0 0 8rpx;
font-size:31rpx;
font-weight:400;
color:rgba(63,63,63,1);
width: 80%;
overflow: hidden;
text-overflow: ellipsis;
white-space: nowrap;
}
.product_content_list .product_list_box .product_item_plus{
position: absolute;
right: 19rpx;
bottom: 33rpx;
width: 28rpx;
height: 28rpx;
display: inline-block;
}