/* pages/home/homeIndex/homeIndex.wxss */
page{
	background:rgb(245, 245, 245);
  z-index:100;
}
.home_container {
  width: 100%;
  height: auto;
}
.banner_bg {
  margin: 0 0;
  width: 100%;
  height: 288rpx;
}
.banner_bg .banner_bg_img {
  width: 100%;
  height: 100%;
}
/* 搜索 */
.search_box {
  position: absolute;
  top: 23rpx;
  left: 30rpx;
  width: 690rpx;
  border: 1rpx solid #D6D7DC;
  border-radius: 30rpx;
  height: 60rpx;
  font-size: 26rpx;
  color: #7F8699;
  background-color: #fff;
}
.search_box .search_box_input {
  display: inline-block;
  box-sizing: border-box;
  width: 90%;
  height: 60rpx;
  border-radius: 30rpx;
  line-height: 60rpx;
}
.search_box>image {
  margin: 16rpx 14rpx;
  width: 27rpx;
  height: 27rpx;
  display: inline-block;
  vertical-align: top;
}
.info_box{
  position: absolute;
  top: 26rpx;
  right: 28rpx;
  width: 51rpx;
  height: 51rpx;
}
.info_box .info_img {
  width: 51rpx;
  height: 51rpx;
}
.info_box .info_content {
  position: absolute;
  top: 7rpx;
  left: 31rpx;
  width: 13rpx;
  height: 13rpx;
  font-size: 8rpx;
  text-align: center;
  line-height: 13rpx;
  background-color: #FF4A4A;
  border-radius: 50%;
  color: #ffffff;
}
/* 轮播 */
.home_swiper {
  position: absolute;
  top: 106rpx;
  left: 28rpx;
  width: 693rpx;
  height: 258rpx;
}
.home_swiper .slide-image {
  width: 100%;
  height: 100%;
}
/* 分类 */
.home_sort_box {
  box-sizing: border-box;
  margin-top: 26rpx;
  padding-top: 51rpx;
  padding-bottom: 20rpx;
  width: 100%;
  background-color: #ffffff;
  margin-bottom: 30rpx;
}
.home_sort_box .home_sorts {
 padding: 10rpx 20rpx;
 box-sizing: border-box;
 width: 100%;
 /* height: 303rpx; */
 height: auto;
 display: flex;
 justify-content: space-between;
 flex-wrap: wrap; 
 text-align: center;
 background-color: #fff;
}
.home_sort_box .home_sorts .home_sort_list {
  padding: 22rpx;
  display: inline-block;
  width: 20%;
  height: 50%;
  line-height: 50%;
  box-sizing: border-box;
}
.home_sort_box .home_sorts .home_sort_list image{
  display: inline-block;
  width: 85rpx;
  height: 85rpx;
}
.home_sort_box .home_sorts .home_sort_list .home_sort_title{
  color: #3F3F3F;
  font-size: 24rpx;
}
.home_recommend {
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 0 26rpx;
  width: 100%;
  height: 180rpx;
  display: flex;
  justify-content: space-between;
}
.home_recommend_box {
  padding: 10rpx 26rpx;
  box-sizing: border-box;
  width: 340rpx;
  height: 180rpx;
  border-radius: 6rpx;
  background-color: #fff;
  box-shadow:0px 2px 9px 0px rgba(6,0,1,0.2);
}
.home_recommend_box .home_recommend_title {
  font-size:28rpx;
  font-weight:500;
  color:rgba(63,63,63,1);
  line-height:36rpx;
}
.home_recommend_box .home_recommend_list {
  padding: 17rpx 0;
  box-sizing: border-box;
  width:100%;
  height: 96rpx; 
  display: flex;
  justify-content: space-between;
  text-align: center;
  line-height: 70rpx;
}
.home_recommend_box .home_recommend_list .home_recommend_item{
  position: relative;
  width:69rpx;
  height: 70rpx; 
}
.home_recommend_box .home_recommend_list .home_recommend_item .home_recommend_product{
  width:100%;
  height: 100%;
}
.home_recommend_box .home_recommend_list .home_recommend_item .home_recommend_hot {
  position: absolute;
  bottom: 0;
  right: -14rpx;
  width: 42rpx;
  height: 42rpx;
}
.home_recommend_box .home_recommend_list .home_recommend_item .home_recommend_more {
  width: 25rpx;
  height: 25rpx;
}
.home_recommend_box .home_recommend_text {
  font-size:20rpx;
  font-weight:400;
  color:rgba(127,134,153,1);
}
.home_recommend_box .home_recommend_list .home_recommend_suit {
  width:70rpx;
  height: 70rpx;
  vertical-align: top;
}
.home_recommend_box .home_recommend_list .home_suit_box {
  padding: 10rpx;
  box-sizing: border-box;
  display: inline-block;
  text-align: left;
}
.home_recommend_box .home_recommend_list .home_suit_box .home_suit_title {
  font-size:24rpx;
  font-weight:400;
  color:rgba(63,63,63,1);
  line-height: 12rpx;
}
.home_recommend_box .home_recommend_list .home_suit_box .home_suit_access {
  font-size:20rpx;
  font-weight:400;
  color:rgba(127,134,153,1);
}
/* 公众号 */
.home_public{
  position: relative;
  margin:0 30rpx 30rpx 30rpx;
  width:690rpx;
  height:167rpx;
  background:rgba(255,255,255,1);
  border-radius:14rpx;
  box-sizing: border-box;
}

/* 新品特价 */
.home_product_box {
  width: 100%;
  height: auto;
  background:rgba(255,255,255,1);
}
.product_title_list {
  width: auto;
  height: 107rpx;
  padding: 0 40rpx;
  padding-top: 15rpx;
  box-sizing: border-box;
  white-space: nowrap;
}
.product_title_list .theme_title{
  position: relative;
  margin-right: 29rpx;
  /* padding-bottom: 12rpx; */
  display: inline-block;
  font-size:24rpx;
  font-weight:400;
  color:rgba(127,134,153,1);
}
.product_title_list .theme_title view.active{
  /* border-bottom: 6rpx solid #B461F8; */
  /* box-shadow: 0 38rpx 0 -28rpx #e88784;
  font-family:SourceHanSansCN-Medium; */
  font-size:42rpx;
  font-weight:500;
  color:rgba(63,63,63,1);
}
.product_title_list .theme_title .active_line {
  position: absolute;
  left: 64rpx;
  top: 60rpx;
  width:37rpx;
  height:6rpx;
  background:rgba(180,97,248,1);
  border-radius:3rpx;
}
.product_content_list {
  width: 100%;
  height: auto;
  padding: 0 25rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.product_content_list .product_list_box{
  position: relative;
  width: 345rpx;
  height: 505rpx;
  /* border:1px solid rgba(214, 215, 220, 1); */
  box-shadow: 0rpx 0rpx 40rpx rgba(214, 215, 220, 1);
  border-radius:20rpx;
  box-sizing: border-box;
  margin-bottom:15rpx;
  overflow: hidden;
}
.product_content_list .product_list_box .product_item_img{
  width: 100%;
  height: 329rpx;
  background-color: #FFF7CF;
}
.product_content_list .product_list_box .product_item_name{
  margin: 10rpx 0 0 10rpx;
  width: 98%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size:27rpx;
  font-weight:400;
  color:rgba(63,63,63,1);
}
.product_content_list .product_list_box .product_item_type {
  margin: 10rpx 0 0 10rpx;
  font-size:23rpx;
  font-weight:400;
  color:rgba(127,134,153,1);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.product_content_list .product_list_box .product_item_price{
  display: inline-block;
  margin: 15rpx 0 0 8rpx;
  font-size:31rpx;
  font-weight:400;
  color:rgba(63,63,63,1);
  width: 80%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.product_content_list .product_list_box .product_item_plus{
  position: absolute;
  right: 19rpx;
  bottom: 33rpx;
  width: 28rpx;
  height: 28rpx;
  display: inline-block;
}
